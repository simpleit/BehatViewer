{
    "name": "behat-viewer/BehatViewer",
    "description": "Behat report browser",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "repositories": [
        {
            "type"     : "package",
            "package"  : {
                "version": "dev-master",
                "name"   : "thunderpush/php-thunderclient",
                "type"   : "library",
                "source" : {
                    "url"      : "git://github.com/thunderpush/php-thunderclient.git",
                    "type"     : "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.1.*",
        "doctrine/orm": ">=2.2.3,<2.4-dev",
        "doctrine/doctrine-bundle": "1.0.*",
        "twig/extensions": "1.0.*",
        "symfony/assetic-bundle": "2.1.*",
        "symfony/swiftmailer-bundle": "2.1.*",
        "symfony/monolog-bundle": "2.1.*",
        "sensio/distribution-bundle": "2.1.*",
        "sensio/framework-extra-bundle": "2.1.*",
        "sensio/generator-bundle": "2.1.*",
        "jms/security-extra-bundle": "1.2.*",
        "jms/di-extra-bundle": "1.1.*",

        "doctrine/doctrine-fixtures-bundle":    "*",
        "doctrine/doctrine-migrations-bundle":  "*",
        "friendsofsymfony/jsrouting-bundle":    "dev-master",
        "knplabs/knp-markdown-bundle":          "dev-composer",

        "oldsound/rabbitmq-bundle":             "dev-master",

        "thunderpush/php-thunderclient":        "dev-master"
    },
    "require-dev": {
        "behat/behat":                          "v2.4.0",
        "behat/mink-extension":                 "dev-master",
        "behat/symfony2-extension":             "v1.0.0",
        "behat/mink-sahi-driver":               "*",
        "behat/mink-selenium-driver":           "*",
        "behat/mink-selenium2-driver":          "*",
        "behat/mink-browserkit-driver":         "*",
        "behat/mink-goutte-driver":             "*",
        "behat/mink-zombie-driver":             "*",
        "jubianchi/behat-viewer-extension":     "*"
    },
    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev",
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    }
}
